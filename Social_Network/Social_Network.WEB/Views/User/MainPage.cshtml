@model Social_Network.WEB.Models.UserInfoViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MainPage</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.js")" type="text/javascript"></script>
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="text-center panel-heading">
        <h1>This nigga's info.</h1>

    </div>
    <div class="panel-body text-center">
        <div class="form-group">
            <label>Name</label>
            @Html.DisplayFor(x => x.Name)
        </div>
        <div class="form-group">
            <label>Surname</label>
            @Html.DisplayFor(x => x.Surname)

        </div>
        <div class="form-group">
            <label>Birthday</label>
            @Html.DisplayFor(x => x.Birthday)

        </div>
        <div class="form-group">
            <label>Gender</label>
            @Html.DisplayFor(x => x.Gender)
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.DisplayFor(x => x.Mail)
        </div>
        <div class="form-group">
            <label>URL</label>
            @Html.DisplayFor(x => x.URL)
        </div>
        <div class="text-center">
            <div class="btn btn-success">
                @Html.ActionLink("Log the shit out of this nigga...", "Logout", "UserLogin")
            </div>
        </div>
    </div>
</body>
</html>

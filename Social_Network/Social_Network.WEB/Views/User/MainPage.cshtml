@model Social_Network.WEB.Models.UserInfoViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MainPage</title>
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/NetworkFunctions.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        .input-append .btn.dropdown-toggle {
            float: none;
        }

        #maindiv {
            margin-top: 150px;
        }
    </style>
</head>
<body onload="SetIntervalOnLoad('#postsID', ''+@Model.ID)">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">
                    @Model.AuthenticatedURL
                </div>
                <div class="input-group navbar-brand">
                    <input id="searchTextID" placeholder="Niggas for search..." type="text" class="form-control" aria-label="..." onchange="UsersAjaxCall('#usersList', '#searchTextID')">
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <b class="caret"></b>
                        </button>
                        <ul id="usersList" class="dropdown-menu dropdown-menu-right" role="menu"></ul>
                    </div>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("View the page of this nigga!", "MainPage", "User", new { id = @Model.AuthenticatedURL }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Update the data on this nigga!", "Edit", "User")
                    </li>
                    <li>
                        @Html.ActionLink("Log the shit out of this nigga!", "Logout", "UserLogin")
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div id="maindiv" class="row">
        <div class="panel-body col-md-4">
            <div class="text-center panel-heading">
                <h1>This nigga's info!</h1>
            </div>
            <div class="text-left">
                <div class="form-group">
                    <label>Name</label>
                    @Html.DisplayFor(x => x.Name)
                </div>
                <div class="form-group">
                    <label>Surname</label>
                    @Html.DisplayFor(x => x.Surname)

                </div>
                @if (Model.Show_birthday)
                {
                    <div class="form-group">
                        <label>Birthday</label>
                        @Html.DisplayFor(x => x.Birthday)
                    </div>
                }
                <div class="form-group">
                    <label>Gender</label>
                    @Html.DisplayFor(x => x.Gender)
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.DisplayFor(x => x.Mail)
                </div>
                <div class="form-group">
                    <label>URL</label>
                    @Html.DisplayFor(x => x.URL)
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <img class="img-responsive" src="/User/Image/@((Model.Photo_ID == null)?"":""+Model.Photo_ID)" alt="hui" />
            @if (Model.URL == Model.AuthenticatedURL)
            {
                using (Html.BeginForm("MainPage", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    <div class="text-center form-group">
                        <label class="form-control">Get a picture for this nigga!</label>
                        <input id="ImageFile" name="ImageFile" type="file" accept="image/jpeg,image/png,image/jpg" class="control-label col-md-2 form-control" />
                        <div class="form-control">
                            <input type="submit" value="Save the picture of this nigga!" class="btn btn-default" />
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <textarea placeholder="Enter the text for the nigga's post" id="newPostText" name="newPostText" rows="6"></textarea>
            <input id="newPostImage" name="newPostImage" type="file" accept="image/jpeg,image/png,image/jpg" />
            <div class="btn btn-default" onclick="CreatePostAjaxCall('#postsID', @Model.ID, '#newPostText', '#newPostImage')">
                Submit the post for the nigga!
            </div>
            <div id="postsID">

            </div>
        </div>
    </div>
</body>
</html>

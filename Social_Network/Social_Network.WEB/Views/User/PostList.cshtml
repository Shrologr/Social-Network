@model List<Social_Network.WEB.Models.PostListItemViewModel>

@foreach (var item in Model)
{
    string likeid = "likeid" + item.ID;
    <div>
        <div>
            @Html.ActionLink(item.PosterFullName, "MainPage", "User", new { id = item.URL }, null)
            @if (item.Authenticated_URL == item.URL)
            {
                <div class="right btn btn-link" onclick="RemovePost('#postsID',@item.UserID,@item.ID)">
                    Delete the post!
                </div>
            }
        </div>
        <div>
            @item.Date
        </div>
        <div class="">
            @item.Text
        </div>
        <div>
            <img class="img-responsive" src="/User/PostImage/@((item.ID == null) ? "" : "" + item.ID)" alt="hui" />
        </div>
        <div class="btn" id=@likeid onclick="LikePost(@likeid,@item.ID)">
            ♥ @item.Likes
        </div>
    </div>
}
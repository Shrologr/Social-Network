@model Social_Network.WEB.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.js")" type="text/javascript"></script>
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="center-block">

        @using (Html.BeginForm("Login", "UserLogin", FormMethod.Post, new { @class = "container" }))
        {
            <div>
                <h2>Log in, for fuck's sake, nigga...</h2>
            </div>
            @Html.ValidationSummary()
            <div class="input-group">
                <label>Email</label>
                @Html.TextBoxFor(s => s.Mail, new { @class = "form-control" })
            </div>
            <div class="input-group">
                <label>Password</label>
                @Html.PasswordFor(s => s.User_Password, new { @class = "form-control" })
            </div>
            <div>
                <input type="submit" value="Log this nigga in" class="btn btn-success" />
            </div>
            <div class="btn btn-success">
                @Html.ActionLink("Register a new nigga", "Register")
            </div>
        }
            
    </div>
</body>
</html>
